{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Streamlit: Dev",
            "type": "python",
            "request": "launch",
            "module": "streamlit",
            "args": [
                "run",
                "${workspaceFolder}/src/app.py",
                "--server.runOnSave=true",
                "--logger.level=info"
            ],
            "justMyCode": true,
            "env": {
                "PYTHONPATH": "${workspaceFolder}"
            },
            "python": "${workspaceFolder}/venv/bin/python"
        }
    ]
} 